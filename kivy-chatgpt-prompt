        os.path.join(config.KV_PATH, "intro.kv"),
        os.path.join(config.KV_PATH, "navbar.kv"),
    ]

    # Watch for changes in these directories
    AUTORELOADER_PATHS = [
        (os.getcwd(), {"recursive": True}),
