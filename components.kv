ScreenManager:
    IntroScreen:
    HomeScreen:
    PlayScreen:
    SaveScreen:
    EditScreen:

<IntroScreen>:
    name: 'intro'

    Image:
        source: "static/logo.png"

    MDLabel:
        text: "Hello,\nI am here to help you track your mood"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.6}

    MDFillRoundFlatButton:
        text: 'Start'
        md_bg_color: 'black'
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        on_press: root.manager.current = 'home'
        
<HomeScreen>
    name: 'home'

    MDIcon:
        icon: "home"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDRectangleFlatButton:
        text: "Play"
        theme_text_color: "Custom"
        text_color: "green"
        line_color: "black"
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_press: root.manager.current = 'play'

    MDRectangleFlatbutton:
        text: "Save"
        theme_text_color: "Custom"
        text_color: "blue"
        line_color: "black"
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_press: root.manager.current = 'edit'
