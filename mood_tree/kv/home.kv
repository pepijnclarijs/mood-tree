#:kivy 2.3.0
<HomeScreen>:
    name: 'home'
    md_bg_color: self.theme_cls.backgroundColor
    # md_bg_color: self.theme_cls.backgroundColor

    MDIcon:
        icon: "home"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDButton:
        style: "outlined"           # replacement for MDRectangleFlatButton
        size_hint: None, None
        width: dp(140)
        height: dp(44)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_release: root.manager.current = 'play'
        MDButtonText:
            text: "Play"

    MDButton:
        id: MyButton
        style: "outlined"
        size_hint: None, None
        width: dp(140)
        height: dp(44)
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_release: root.manager.current = 'edit'
        MDButtonText:
            text: "Save2"

    MDLabel:
        text: str(root.ids.MyButton.height)
        halign: "center"