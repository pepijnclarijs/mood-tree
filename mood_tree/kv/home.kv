#:kivy 2.3.0
#:include mood_tree/kv/buttons.kv
<HomeScreen>:
    name: 'home'
    md_bg_color: app.app_config.COLOR_SAGE_GREEN

    DateWidget:
        MDLabel:
            text: self.parent.current_date
            font_style: 'Inter'
            text_color: app.app_config.COLOR_FOREST_GREEN
            halign: 'center'
            pos_hint: {'center_x':0.5, 'center_y':0.9}
            role: 'medium'

    MDLabel:
        text: str()
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDBoxLayout:
        orientation: "vertical"
        spacing: "12dp"
        padding: "24dp"
        size_hint_x: 0.5        # Take half of the parent width
        pos_hint: {"center_x": 0.5, "center_y": 0.9}  # Center horizontally

        GeneralScreenNavigateButton:
            # Positioning
            pos_hint: {'center_x': 0.5}
            button_text: "Add Today's Entry"
            target_screen: "intro_screen"
            button_color: app.app_config.COLOR_SOFT_CORAL

        GeneralScreenNavigateButton:
            # Positioning
            pos_hint: {'center_x': 0.5, "center_y": 0.6}
            button_text: "View Analysis"
            target_screen: "intro_screen"
            button_color: app.app_config.COLOR_SEAFOAM_GREEN

        GeneralScreenNavigateButton:
            # Positioning
            pos_hint: {'center_x': 0.5, "center_y": 0.4}
            button_text: "Add New Field"
            target_screen: "intro_screen"
            button_color: app.app_config.COLOR_LAVENDER

