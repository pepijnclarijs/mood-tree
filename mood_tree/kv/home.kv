#:kivy 2.3.0
<HomeScreen>:
    name: 'home'
    md_bg_color: self.theme_cls.backgroundColor

    MDIcon:
        icon: "home"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDButton:
        style: "outlined"           # replacement for MDRectangleFlatButton
        size_hint: None, None
        width: dp(140)
        height: dp(44)
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
        on_release: root.manager.current = 'play'
        MDButtonText:
            text: "Play"

    MDButton:
        id: MyButton
        style: "outlined"
        size_hint: None, None
        width: dp(140)
        height: dp(44)
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}
        on_release: root.manager.current = 'edit'
        MDButtonText:
            text: "Save"

    MDLabel:
        text: str(root.ids.MyButton.height)
        halign: "center"

#:kivy 2.3.0
<BaseMDNavigationItem>:
    MDNavigationItemIcon:
        icon: root.icon

    MDNavigationItemLabel:
        text: root.text

<NavBar>:
    MDNavigationBar:
        on_switch_tabs: app.on_switch_tabs(*args)
        BaseMDNavigationItem:
            icon: "home"
            text: "Home"
            active: True
            navigate_to: "home_screen"

        BaseMDNavigationItem:
            icon: "intro"
            text: "Intro"
            navigate_to: "intro_screen"
