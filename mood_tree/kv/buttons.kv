#:kivy 2.3.0
#:import Clock kivy.clock.Clock

<GeneralScreenNavigateButton>:
    # General style
    style: "filled"

    # Coloring
    theme_bg_color: "Custom"
    md_bg_color: self.button_color

    # Sizing
    theme_width: "Custom"
    size_hint_x: .9
    height: "56dp"

    # Interactions
    on_release: app.root_element.ids.screen_manager.current = self.target_screen

    MDButtonText:
        id: button_text
        text: root.button_text

        # Font & Color
        theme_text_color: "Custom"
        text_color: app.app_config.COLOR_WARM_CREAM
        font_style: "Inter"
        role: "medium"

        # Bounding box alignment
        pos_hint: {"center_x": .5, "center_y": .5}

        # Text alignment inside bounding box
        halign: "center"
        valign: "middle"
        padding_x: 10

        # dynamic text_size
        adaptive_height: True
        markup: True
        shorten: True
        shorten_from: 'right'
        text_size: (self.parent.width * 0.9, None)
        
